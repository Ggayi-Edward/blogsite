---
import { motion } from "framer-motion";

interface Props {
  artwork: {
    slug: string;
    title: string;
    description: string;
    image: string;
    category: string;
  };
}

const { artwork } = Astro.props;
---

<motion.article
  client:load
  initial={{ opacity: 0, y: 20 }}
  animate={{ opacity: 1, y: 0 }}
  transition={{ duration: 0.5 }}
  class="card group overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
>
  <a href={`/art/${artwork.slug}`} class="block">
    <div class="relative aspect-square overflow-hidden">
      <img 
        src={artwork.image} 
        alt={artwork.title}
        class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        <div class="absolute bottom-0 left-0 right-0 p-6">
          <span class="px-3 py-1 text-xs font-medium bg-white/90 dark:bg-gray-900/90 text-primary-600 dark:text-primary-400 rounded-full backdrop-blur-sm">
            {artwork.category}
          </span>
          <h3 class="mt-2 text-lg font-semibold text-white">
            {artwork.title}
          </h3>
          <p class="mt-1 text-sm text-gray-200 line-clamp-2">
            {artwork.description}
          </p>
        </div>
      </div>
    </div>
  </a>
</motion.article>