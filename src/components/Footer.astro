---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'Twitter', url: 'https://twitter.com/yourusername' },
  { name: 'Instagram', url: 'https://instagram.com/yourusername' },
  { name: 'GitHub', url: 'https://github.com/yourusername' }
];
---

<footer class="py-12 bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800">
  <div class="container">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Logo and description -->
      <div class="space-y-4">
        <a href="/" class="text-xl font-bold tracking-tight text-primary-600 dark:text-primary-400">
          Modern Blog
        </a>
        <p class="text-gray-600 dark:text-gray-400 text-sm max-w-xs">
          A beautiful space for sharing posts, ideas, and creative artwork with the world.
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-base font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="/" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Home</a></li>
          <li><a href="/blog" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Blog</a></li>
          <li><a href="/art" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Art Gallery</a></li>
          <li><a href="/about" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">About</a></li>
          <li><a href="/contact" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Contact</a></li>
        </ul>
      </div>
      
      <!-- Categories -->
      <div>
        <h3 class="text-base font-semibold mb-4">Categories</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="/blog/category/creativity" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Creativity</a></li>
          <li><a href="/blog/category/design" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Design</a></li>
          <li><a href="/blog/category/technology" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Technology</a></li>
          <li><a href="/blog/category/inspiration" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Inspiration</a></li>
        </ul>
      </div>
      
      <!-- Social -->
      <div>
        <h3 class="text-base font-semibold mb-4">Connect</h3>
        <ul class="space-y-2 text-sm">
          {socialLinks.map(link => (
            <li>
              <a 
                href={link.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800 text-sm text-gray-600 dark:text-gray-400">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p>&copy; {currentYear} Modern Blog. All rights reserved.</p>
        <div class="flex space-x-6">
          <a href="/privacy" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Privacy Policy</a>
          <a href="/terms" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>