---
import Layout from '../../layouts/Layout.astro';
import ArtCard from '../../components/ArtCard.astro';

// Sample artwork data
const allArtwork = [
  {
    slug: 'urban-dream',
    title: 'Urban Dream',
    description: 'A surreal cityscape blending architecture and nature.',
    image: 'https://images.pexels.com/photos/1269968/pexels-photo-1269968.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    category: 'Digital Art'
  },
  {
    slug: 'serenity',
    title: 'Serenity',
    description: 'Abstract composition exploring tranquility through color and form.',
    image: 'https://images.pexels.com/photos/1585325/pexels-photo-1585325.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    category: 'Abstract'
  },
  {
    slug: 'emotional-portrait',
    title: 'Emotional Portrait',
    description: 'Exploration of human emotion through expressive portraiture.',
    image: 'https://images.pexels.com/photos/2832382/pexels-photo-2832382.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    category: 'Portrait'
  },
  {
    slug: 'nature-fusion',
    title: 'Nature Fusion',
    description: 'Organic forms meet geometric patterns in this nature-inspired piece.',
    image: 'https://images.pexels.com/photos/1366957/pexels-photo-1366957.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    category: 'Mixed Media'
  },
  {
    slug: 'digital-landscape',
    title: 'Digital Landscape',
    description: 'Futuristic landscape rendered with procedural generation techniques.',
    image: 'https://images.pexels.com/photos/1536619/pexels-photo-1536619.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    category: 'Digital Art'
  },
  {
    slug: 'conceptual-composition',
    title: 'Conceptual Composition',
    description: 'Experimental work exploring the boundaries between reality and imagination.',
    image: 'https://images.pexels.com/photos/2156881/pexels-photo-2156881.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    category: 'Conceptual'
  },
  {
    slug: 'color-study',
    title: 'Color Study #12',
    description: 'Exploration of color relationships and emotional resonance.',
    image: 'https://images.pexels.com/photos/1193743/pexels-photo-1193743.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    category: 'Abstract'
  },
  {
    slug: 'urban-patterns',
    title: 'Urban Patterns',
    description: 'Visual study of architectural rhythms and urban textures.',
    image: 'https://images.pexels.com/photos/2693529/pexels-photo-2693529.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    category: 'Photography'
  },
  {
    slug: 'fragmented-reality',
    title: 'Fragmented Reality',
    description: 'Deconstructed perspective challenging perception through fragmentation.',
    image: 'https://images.pexels.com/photos/1170642/pexels-photo-1170642.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    category: 'Experimental'
  }
];

// Get unique categories for the filter
const categories = [...new Set(allArtwork.map(art => art.category))];
---

<Layout title="Art Gallery - Modern Blog" description="Explore my collection of artwork including digital art, photography, and more.">
  <!-- Header -->
  <section class="bg-gradient-to-r from-secondary-50 to-secondary-100 dark:from-secondary-950/50 dark:to-secondary-900/30 py-12 md:py-20">
    <div class="container">
      <div class="max-w-2xl">
        <h1 class="text-4xl md:text-5xl font-bold">Art Gallery</h1>
        <p class="mt-4 text-xl text-gray-700 dark:text-gray-300">
          A collection of my creative work across various mediums and styles
        </p>
      </div>
    </div>
  </section>
  
  <!-- Art Gallery -->
  <section class="py-12 md:py-16">
    <div class="container">
      <!-- Filters -->
      <div class="mb-10 flex flex-wrap gap-2">
        <button 
          id="all-categories" 
          class="px-4 py-2 rounded-full bg-secondary-600 text-white hover:bg-secondary-700 transition-colors"
        >
          All
        </button>
        {categories.map(category => (
          <button 
            class="px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors category-filter"
            data-category={category}
          >
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>
</Layout>