---
import Layout from '../layouts/Layout.astro';

const skills = [
  { name: 'Digital Art', level: 'Expert' },
  { name: 'UI/UX Design', level: 'Advanced' },
  { name: 'Photography', level: 'Intermediate' },
  { name: 'Motion Graphics', level: 'Advanced' },
  { name: 'Illustration', level: 'Expert' },
  { name: 'Web Design', level: 'Advanced' }
];

const experiences = [
  {
    role: 'Senior Designer',
    company: 'Creative Studio X',
    period: '2023 - Present',
    description: 'Leading the creative direction for major client projects and mentoring junior designers.'
  },
  {
    role: 'Digital Artist',
    company: 'Freelance',
    period: '2020 - 2023',
    description: 'Created digital artwork and illustrations for various international clients and exhibitions.'
  },
  {
    role: 'UI Designer',
    company: 'Tech Innovations Inc',
    period: '2018 - 2020',
    description: 'Designed user interfaces for web and mobile applications, focusing on user experience and accessibility.'
  }
];
---

<Layout 
  title="About Me - Modern Blog" 
  description="Learn more about my journey, skills, and experience in design and digital art."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-primary-50 to-secondary-50 dark:from-primary-950/50 dark:to-secondary-950/50 py-20 md:py-32">
    <div class="container">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold">About Me</h1>
        <p class="mt-6 text-xl text-gray-700 dark:text-gray-300">
          A creative professional passionate about design, art, and storytelling
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Profile Section -->
        <div class="lg:col-span-2 space-y-8">
          <div class="prose prose-lg dark:prose-invert">
            <h2 class="text-3xl font-bold mb-6">My Journey</h2>
            <p>
              Hello! I'm a multidisciplinary creative professional with over 5 years of experience in digital art, design, and visual storytelling. My work spans across various mediums, from digital illustrations to user interface design.
            </p>
            <p>
              What drives me is the endless possibility of creative expression and the opportunity to connect with people through my work. I believe in the power of visual communication to inspire, educate, and create meaningful experiences.
            </p>
            <p>
              When I'm not creating, you can find me exploring new art techniques, attending design workshops, or photographing urban landscapes. I'm always eager to learn and push the boundaries of my creative practice.
            </p>
          </div>

          <!-- Experience -->
          <div class="mt-12">
            <h2 class="text-3xl font-bold mb-6">Experience</h2>
            <div class="space-y-8">
              {experiences.map(exp => (
                <div class="card p-6">
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{exp.role}</h3>
                  <p class="text-primary-600 dark:text-primary-400">{exp.company}</p>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">{exp.period}</p>
                  <p class="mt-3 text-gray-700 dark:text-gray-300">{exp.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
          <!-- Profile Image -->
          <div class="relative">
            <div class="aspect-square rounded-2xl overflow-hidden">
              <img
                src="https://images.pexels.com/photos/3184339/pexels-photo-3184339.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                alt="Profile photo"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="absolute -bottom-4 -right-4 -z-10 aspect-square w-full rounded-2xl bg-primary-100 dark:bg-primary-900/30"></div>
          </div>

          <!-- Skills -->
          <div class="card p-6">
            <h3 class="text-xl font-semibold mb-4">Skills</h3>
            <div class="space-y-4">
              {skills.map(skill => (
                <div>
                  <div class="flex justify-between items-center mb-1">
                    <span class="text-gray-700 dark:text-gray-300">{skill.name}</span>
                    <span class="text-sm text-primary-600 dark:text-primary-400">{skill.level}</span>
                  </div>
                  <div class="h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                    <div 
                      class="h-full bg-primary-600 dark:bg-primary-400 rounded-full"
                      style={`width: ${skill.level === 'Expert' ? '95%' : skill.level === 'Advanced' ? '80%' : '60%'}`}
                    ></div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Contact -->
          <div class="card p-6">
            <h3 class="text-xl font-semibold mb-4">Get in Touch</h3>
            <div class="space-y-4">
              <a href="/contact" class="btn-primary w-full justify-center">
                Contact Me
              </a>
              <div class="flex justify-center space-x-4">
                <a href="https://twitter.com/yourusername" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">
                  <span class="sr-only">Twitter</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                  </svg>
                </a>
                <a href="https://github.com/yourusername" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">
                  <span class="sr-only">GitHub</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                  </svg>
                </a>
                <a href="https://linkedin.com/in/yourusername" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400">
                  <span class="sr-only">LinkedIn</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>